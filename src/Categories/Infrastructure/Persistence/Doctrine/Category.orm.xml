<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="App\Categories\Infrastructure\Persistence\DoctrineCategoryRepository" name="App\Categories\Domain\Category" table="category">
    <id name="id" column="id" type="uuid">
    </id>
    <embedded name="name" class="App\Categories\Domain\CategoryName" use-column-prefix="false"/>
    <many-to-many field="books" target-entity="App\Books\Domain\Book" mapped-by="categories" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
